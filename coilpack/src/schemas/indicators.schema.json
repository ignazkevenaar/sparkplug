{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "indicators.schema.json",
    "type": "object",
    "properties": {
        "indicators": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "icon": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string",
                        "enum": [
                            "red",
                            "yellow",
                            "green",
                            "blue"
                        ]
                    },
                    "set": {
                        "type": "object",
                        "patternProperties": {
                            ".*": {
                                "type": "string",
                                "enum": [
                                    "static",
                                    "blink",
                                    "blink fast",
                                    "blink slow"
                                ]
                            }
                        }
                    }
                },
                "required": [
                    "icon",
                    "set"
                ]
            }
        },
        "settings": {
            "type": "object",
            "properties": {
                "columns": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 6,
                    "default": 4
                }
            }
        }
    },
    "required": [
        "indicators"
    ]
}
