  "controls": [
    {
      "name": "Headlights",
      "controls": [
        {
          "type": "button",
          "icon": "numeric-0",
          "width": 6,
          "height": 6,
          "positions": [
            {
              "modes": {
                "Parking": false,
                "LowBeams": false,
                "HighBeams": false
              },
              "backgroundStyle": "outline"
