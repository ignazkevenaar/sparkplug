{
  "status": [
    {
      "name": "Status",
      "width": 2,
      "color": "transparent",
      "controls": [
        {
          "type": "indicator",
          "icon": "arrow-left-bold-outline",
          "readOnly": true,
          "width": 4,
          "height": 4,
          "foregroundStyle": "dim",
          "backgroundStyle": "transparent",
          "positions": [
            {
              "modes": {
                "BlinkL": true
              },
              "foregroundColor": "green",
              "foregroundStyle": "default",
              "animation": "blinking"
            },
            {
              "modes": {
                "Hazards": true
              },
              "foregroundColor": "green",
              "foregroundStyle": "default",
              "animation": "blinking"
            }
          ]
        },
        {
