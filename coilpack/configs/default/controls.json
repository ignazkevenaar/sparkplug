          "label": "Off"
        },
        {
          "type": "button",
          "icon": "car-parking-lights",
          "width": 6,
          "height": 6,
          "positions": [
            {
              "modes": {
                "Parking": true,
                "LowBeams": false
              },
              "backgroundStyle": "fill",
              "backgroundColor": "green",
              "foregroundColor": "black"
            }
          ],
          "label": "Parking"
        },
        {
          "type": "button",
          "icon": "car-light-dimmed",
          "width": 12,
          "height": 6,
          "positions": [
            {
              "modes": {
                "Parking": true,
                "LowBeams": true
              },
              "backgroundStyle": "fill",
              "backgroundColor": "green",
              "foregroundColor": "black"
            }
          ],
          "label": "Low"
